{% extends "_layout/base-template" %}

{% block header %}
    <!-- Logo -->
    <div class="flex-shrink-0">
        <a href="/">
            <h1 class="text-2xl font-bold text-gray-900">{{ currentSite.name }}</h1>
        </a>
    </div>

    {% include "_components/cart-nav-item" with {
        count: 0,
    } only %}

{% endblock %}

{% block content %}
    <div class="lg:grid lg:grid-cols-2 lg:gap-x-8 lg:items-start">
        <!-- Image gallery -->
        <div class="flex flex-col">
            <div class="overflow-hidden rounded-lg">
                <img src="{{ entry.image.one().getUrl() }}" alt="{{ entry.title }}" class="w-full h-full object-center object-cover">
            </div>
        </div>

        <!-- Product info -->
        <div class="mt-10 px-4 sm:px-0 sm:mt-16 lg:mt-0">
            <h1 class="text-3xl font-extrabold tracking-tight text-gray-900">{{ entry.title }}</h1>

            <!-- Rating -->
            <div class="mt-3 flex items-center">
                <div class="flex items-center">
                    <svg class="text-yellow-400 h-5 w-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                    <svg class="text-yellow-400 h-5 w-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                    <svg class="text-yellow-400 h-5 w-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                    <svg class="text-yellow-400 h-5 w-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                    <svg class="text-yellow-400 h-5 w-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                </div>
                <p class="ml-2 text-sm text-gray-500">Based on 128 reviews</p>
            </div>

            <!-- Price -->
            <div class="mt-4">
                <p class="text-3xl text-gray-900">{{ entry.price|money }}</p>
                <p class="mt-1 text-sm text-gray-500">Free shipping on orders over $100</p>
            </div>

            <!-- Description -->
            <div class="mt-6">
                <h3 class="sr-only">Description</h3>
                <div class="text-base text-gray-700 space-y-3">
                    {{ entry.description }}
                </div>
            </div>

            <!-- Features -->
            <div class="mt-8">
                <h3 class="text-sm font-medium text-gray-900">Highlights</h3>
                <div class="mt-4">
                    <ul class="list-disc pl-4 space-y-2 text-sm">
                        {% for row in entry.productHighlights %}
                            <li>{{ row.highlight }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <!-- Sizes -->
            <div class="mt-8">
                <div class="flex items-center justify-between">
                    <h3 class="text-sm font-medium text-gray-900">Size</h3>
                    <a href="#" class="text-sm font-medium text-blue-600 hover:text-blue-500">Size guide</a>
                </div>
                <div class="mt-4 grid grid-cols-4 gap-2">
                    <button class="bg-white border rounded-md py-3 px-3 flex items-center justify-center text-sm font-medium text-gray-900 hover:bg-gray-50">7</button>
                    <button class="bg-white border rounded-md py-3 px-3 flex items-center justify-center text-sm font-medium text-gray-900 hover:bg-gray-50">7.5</button>
                    <button class="bg-white border rounded-md py-3 px-3 flex items-center justify-center text-sm font-medium text-gray-900 hover:bg-gray-50">8</button>
                    <button class="bg-white border rounded-md py-3 px-3 flex items-center justify-center text-sm font-medium text-gray-900 hover:bg-gray-50">8.5</button>
                    <button class="bg-white border rounded-md py-3 px-3 flex items-center justify-center text-sm font-medium text-gray-900 hover:bg-gray-50">9</button>
                    <button class="bg-white border rounded-md py-3 px-3 flex items-center justify-center text-sm font-medium text-gray-900 hover:bg-gray-50">9.5</button>
                    <button class="bg-white border rounded-md py-3 px-3 flex items-center justify-center text-sm font-medium text-gray-900 hover:bg-gray-50">10</button>
                    <button class="bg-white border rounded-md py-3 px-3 flex items-center justify-center text-sm font-medium text-gray-900 hover:bg-gray-50">10.5</button>
                    <button class="bg-white border rounded-md py-3 px-3 flex items-center justify-center text-sm font-medium text-gray-900 hover:bg-gray-50">11</button>
                    <button class="bg-white border rounded-md py-3 px-3 flex items-center justify-center text-sm font-medium text-gray-900 hover:bg-gray-50">11.5</button>
                    <button class="bg-white border rounded-md py-3 px-3 flex items-center justify-center text-sm font-medium text-gray-900 hover:bg-gray-50 opacity-50 cursor-not-allowed">12</button>
                    <button class="bg-white border rounded-md py-3 px-3 flex items-center justify-center text-sm font-medium text-gray-900 hover:bg-gray-50 opacity-50 cursor-not-allowed">13</button>
                </div>
            </div>

            <!-- Quantity and Add to cart -->
            <div class="mt-8 flex">
                <div class="mr-4">
                    <label for="quantity" class="sr-only">Quantity</label>
                    <select
                        id="quantity"
                        data-bind="quantity"
                        name="quantity"
                        class="rounded-md border border-gray-300 py-2 px-3 text-base"
                    >
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
                <button
                    class="flex-1 bg-blue-600 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                    data-on-click="{{ datastar.get('_datastar/update-cart', { operation: 'add', id: entry.id }) }}"
                >Add to cart</button>
            </div>

            <!-- Shipping & Returns -->
            <div class="mt-8 border-t border-gray-200 pt-8">
                <div class="flex">
                    <div>
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="ml-3 text-sm text-gray-500">
                        <h4 class="text-gray-900 font-medium">Free shipping worldwide</h4>
                        <p>Get free standard shipping on all orders over $100.</p>
                    </div>
                </div>
                <div class="mt-4 flex">
                    <div>
                        <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 15v-1a4 4 0 00-4-4H8m0 0l3 3m-3-3l3-3m9 14V5a2 2 0 00-2-2H6a2 2 0 00-2 2v16l4-2 4 2 4-2 4 2z" />
                        </svg>
                    </div>
                    <div class="ml-3 text-sm text-gray-500">
                        <h4 class="text-gray-900 font-medium">Easy returns</h4>
                        <p>Return or exchange items within 30 days of delivery.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <code>
        <pre data-text="ctx.signals.JSON()"></pre>
    </code>
{% endblock %}