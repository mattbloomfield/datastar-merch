<div class="flex-1 mx-4">
    <input
            type="text"
            placeholder="Search for products"
            class="w-full px-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring focus:ring-blue-400"
            {# DATASTAR ATTRIBUTES TO MAKE SEARCH WORK #}
            data-bind="searchInput" {# data-bind makes whatever value this input has available as a signal in your _datastar templates #}
            data-on-keydown__debounce.200ms="{{ datastar.get('_datastar/product-listing.twig') }}" {# data-on lets you attach a method #}
            {# END DATASTAR ATTRIBUTES #}
    >
</div>